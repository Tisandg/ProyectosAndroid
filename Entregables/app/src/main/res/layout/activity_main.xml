<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="15dp"
        android:text="Actividad 2. Notificaciones"/>

    <Button
        android:id="@+id/toastCorto"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:text="Toast corta duracion"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/toastLargo"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:text="Toast larga duracion"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/alertaOk"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:text="Alerta con boton ok"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/alertaOkCancelar"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:text="Alerta con boton ok y cancelar"
        android:layout_weight="1"/>

    <Button
        android:id="@+id/personalizado"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        android:text="Toast personalizado"
        android:layout_weight="1"/>


</LinearLayout>
