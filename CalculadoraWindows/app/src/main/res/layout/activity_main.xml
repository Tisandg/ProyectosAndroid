<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.santiago.calculadorawindows.MainActivity">

    <TextView
        android:id="@+id/txt_salida"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:text="Operacion"
        android:textColor="@color/primaryTextColor"
        android:textSize="40dp"
        android:gravity="bottom|end"

        android:background="@color/secondaryColor"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        >

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/button_7"
                android:layout_height="match_parent"
                android:width="0dp"
                android:layout_weight="1"
                android:text="7"
                android:textSize="25dp"
                />
            <Button
                android:id="@+id/button_8"
                android:layout_height="match_parent"
                android:width="0dp"
                android:layout_weight="1"
                android:text="8"
                android:textSize="25dp"
                />
            <Button
                android:id="@+id/button_9"
                android:layout_height="match_parent"
                android:width="0dp"
                android:layout_weight="1"
                android:text="9"
                android:textSize="25dp"
                />
            <Button
                android:id="@+id/button_div"
                android:layout_height="match_parent"
                android:width="0dp"
                android:layout_weight="1"
                android:text="/"
                android:textSize="25dp"
                />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/button_4"
                android:layout_height="match_parent"
                android:width="0dp"
                android:layout_weight="1"
                android:text="4"
                android:textSize="25dp"
                />
            <Button
                android:id="@+id/button_5"
                android:layout_height="match_parent"
                android:width="0dp"
                android:layout_weight="1"
                android:text="5"
                android:textSize="25dp"
                />
            <Button
                android:id="@+id/button_6"
                android:layout_height="match_parent"
                android:width="0dp"
                android:layout_weight="1"
                android:text="6"
                android:textSize="25dp"
                />
            <Button
                android:id="@+id/button_mul"
                android:layout_height="match_parent"
                android:width="0dp"
                android:layout_weight="1"
                android:text="x"
                android:textSize="25dp"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/button_1"
                android:layout_height="match_parent"
                android:width="0dp"
                android:layout_weight="1"
                android:text="1"
                android:textSize="25dp"
                />
            <Button
                android:id="@+id/button_2"
                android:layout_height="match_parent"
                android:width="0dp"
                android:layout_weight="1"
                android:text="2"
                android:textSize="25dp"
                />
            <Button
                android:id="@+id/button_3"
                android:layout_height="match_parent"
                android:width="0dp"
                android:layout_weight="1"
                android:text="3"
                android:textSize="25dp"
                />
            <Button
                android:id="@+id/button_mas"
                android:layout_height="match_parent"
                android:width="0dp"
                android:layout_weight="1"
                android:text="+"
                android:textSize="25dp"
                />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

            <Button
                android:id="@+id/button_borrar"
                android:layout_height="match_parent"
                android:width="0dp"
                android:layout_weight="1"
                android:text="C"
                android:textSize="25dp"
                />
            <Button
                android:id="@+id/button_0"
                android:layout_height="match_parent"
                android:width="0dp"
                android:layout_weight="1"
                android:text="0"
                android:textSize="25dp"
                />
            <Button
                android:id="@+id/button_igual"
                android:layout_height="match_parent"
                android:width="0dp"
                android:layout_weight="1"
                android:text="="
                android:textSize="25dp"
                />
            <Button
                android:id="@+id/button_menos"
                android:layout_height="match_parent"
                android:width="0dp"
                android:layout_weight="1"
                android:text="-"
                android:textSize="25dp"
                />

        </TableRow>

    </TableLayout>

</LinearLayout>
